<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary " style="border-radius:30px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-md-center">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link table-hover" href="/Admin/AdminCategory/Index" @*asp-area="exist" asp-controller="AdminCategory" asp-action="Index"*@>Categories</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link table-hover" href="/Admin/AdminSubCategory/Index" @*asp-area="Admin" asp-controller="AdminSubCategory" asp-action="Index"*@>SubCategories</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link table-hover" href="/Admin/AdminCompany/Index" @*asp-area="Admin" asp-controller="AdminCompany" asp-action="Index"*@>Companies</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link table-hover" href="/Admin/AdminUser/Index" @*asp-area="Admin" asp-controller="AdminUser" asp-action="Index"*@>Users</a>
                    </li>
                    <li class="nav-item active float-right btn-primary">
                        <a class="nav-link table-hover float-right" href="/Admin/Admin/LogOut">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>

    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false);
</body>
</html>
