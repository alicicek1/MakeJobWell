
@{
    ViewData["Title"] = "InsertCategory";
}

@model CategoryVM
<div class="container col-lg-6 offset-3">
    <div class="card">
        <div class="card-header text-center">
            INSERT
        </div>
        <div class="card-body">
            <form href="/Admin/AdminUser/InsertUser" method="post" class="form-group">
                <div class="form-group">
                    <label asp-for="CategoryName"></label>
                    <input class="form-control" asp-for="CategoryName" />
                    <span class="text-danger" asp-validation-for="CategoryName"></span>

                    <label asp-for="Overview"></label>
                    <input class="form-control" asp-for="Overview" />
                    <span class="text-danger" asp-validation-for="Overview"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="card-footer">
                @if (ViewBag.IsSuccess)
                {
                    <label class="text-info">Registration Successful</label>
                    <br />
                    <a asp-controller="AdminUser" asp-action="Index" class="btn btn-link">Return to Departments</a>
                }
                else
                {
                    <label class="text-danger">Kayıt Başarısız</label>
                }
            </div>
        }
    </div>
</div>


