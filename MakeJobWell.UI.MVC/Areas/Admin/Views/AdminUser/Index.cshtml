
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>E-mail</th>
            </tr>
        </thead>
        <tbody id="userSet">
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <th><a class="btn btn-success float-right" href="/Admin/AdminUser/InsertUser">Add New Admin</a></th>
            </tr>
        </tfoot>
    </table>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "get",
                url: "http://localhost:59145/api/User/GetAllUser",
                success: function (response) {

                    $.ajax({
                        type: "post",
                        url: "/Admin/AdminUser/SetUsers",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(response),
                        success: function (data) {
                            $("#userSet").html(data);
                        }
                    })
                }
            })
        })

        function DeleteUser(UserName) {
            console.log(UserName);
            $.ajax({
                type: "delete",
                url: "http://localhost:59145/api/User/Delete/" + UserName,
                success: function (response) {

                    $.ajax({
                        type: "get",
                        url: "http://localhost:59145/api/User/GetAllUser",
                        success: function (response) {

                            $.ajax({
                                type: "post",
                                url: "/Admin/AdminUser/SetUsers",
                                contentType: "application/json; charset=utf-8",
                                data: JSON.stringify(response),
                                success: function (data) {
                                    $("#userSet").html(data);
                                }
                            })
                        }
                    })
                }
            })
        }
    </script>
}

