
@{
    ViewData["Title"] = "UpdateCompany";
}

@model CompanyVM
<div class="container col-lg-6 offset-3">
    <div class="card">
        <div class="card-header text-center">
            UPDATE
        </div>
        <div class="card-body">
            <form href="/Admin/AdminCompany/UpdateCompany/@Model.CompanyID" method="post" class="form-group">
                <div class="form-group">
                    <label asp-for="CompanyName"></label>
                    <input class="form-control" asp-for="CompanyName" />
                    <span class="text-danger" asp-validation-for="CompanyName"></span>
                    <label asp-for="Overview"></label>
                    <input class="form-control" asp-for="Overview" />
                    <span class="text-danger" asp-validation-for="Overview"></span>
                    <label asp-for="Location"></label>
                    <input class="form-control" asp-for="Location" />
                    <span class="text-danger" asp-validation-for="Location"></span>
                    <label asp-for="WebSite"></label>
                    <input class="form-control" asp-for="WebSite" />
                    <span class="text-danger" asp-validation-for="WebSite"></span>
                    <label asp-for="SubCatID"></label>
                    <input class="form-control" asp-for="SubCatID" />
                    <span class="text-danger" asp-validation-for="SubCatID"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="card-footer">
                @if (ViewBag.IsSuccess)
                {
                    <label class="text-info">Update Successful</label>
                    <br />
                    <a asp-controller="Department" asp-action="ModifiyingDepartments" class="btn btn-link">Return to Departments</a>
                }
                else
                {
                    <label class="text-danger">Kayıt Başarısız</label>
                }
            </div>
        }
    </div>


