

@model UserVM

<div class="card-body">
    <div class="d-flex flex-column align-items-center text-center">
        @if (Model.Gender == MakeJobWell.Models.Enum.Gender.Man)
        {
            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
        }
        else if (Model.Gender == MakeJobWell.Models.Enum.Gender.Woman)
        {
            <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="Admin" class="rounded-circle" width="150">

        }
        else
        {
            <img style="background:#ff0000" />
        }

        <div class="mt-3">
            <h4>@Model.FirstName @Model.LastName</h4>
            <p class="text-secondary mb-1">@Model.UserName</p>
            <p class="text-secondary mb-1">@Model.PhoneNumber</p>
            <p class="text-secondary mb-1">@Model.Email</p>
            <p class="text-muted font-size-sm">@Model.Address</p>
            <button class="btn btn-primary">Write Complaint</button>
        </div>
    </div>
</div>