<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Make Job Well</title>

    <link href="~/css/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="tm-site-header">
        <div class="row">
            <div class="col-12 tm-site-header-col">
                <div class="tm-site-header-left">
                    <a class="nav-link tm-nav-link" asp-controller="Home" asp-action="Index">
                        <i class="far fa-2x fa-eye tm-site-icon"></i>
                        <h1 class="tm-site-name">Make Job Well</h1>
                    </a>
                    <a asp-controller="Complaint" asp-action="WriteComplaint" class="btn" style="background-color:#fc9999;color:white;margin-bottom:5px,auto">Write Complaint</a>

                </div>
                <div class="tm-site-header-right tm-menu-container-outer">

                    <!--Navbar-->
                    <nav class="navbar navbar-expand-lg">

                        <!-- Collapse button -->
                        <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1"
                                aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="dark-blue-text">
                                <i class="fas fa-bars fa-1x"></i>
                            </span>
                        </button>

                        <!-- Collapsible content -->
                        <div class="collapse navbar-collapse tm-nav" id="navbarSupportedContent1">

                            <!-- Links -->
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link tm-nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link tm-nav-link" asp-controller="Category" asp-action="Index">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link tm-nav-link" asp-controller="Company" asp-action="Index">Companies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link tm-nav-link" asp-controller="Complaint" asp-action="Index">Complaints</a>
                                </li>
                                <li id="userInfo" class="nav-item">
                                    @*<a class="nav-link tm-nav-link" asp-controller="Login" asp-action="Index">Login/Register</a>*@
                                </li>
                            </ul>
                            <!-- Links -->

                        </div>
                        <!-- Collapsible content -->

                    </nav>
                    <!--/.Navbar-->
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">

        @RenderBody()

        <footer>
            Copyright &copy; 2020

            - Design By Ali: <a href="https://www.linkedin.com/in/ali-cicekk/" rel="sponsored" target="_blank" title="css templates">LinkedIn</a>
        </footer>
    </div>

    <script src="~/js/ScriptSheet.js"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", false);


    <script>
        $.ajax({
            type: "GET",
            url: "/Login/CheckUserExisting",
            success: function (data) {
                $("#userInfo").html(data);
            }
        })
    </script>
</body>
</html>
