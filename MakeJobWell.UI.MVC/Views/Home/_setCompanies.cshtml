
@model List<CompanyVM>

@foreach (var item in Model)
{
    <div class="col-lg-4 tm-dotted-box-container">
        <article class="tm-dotted-box">
            <i class="fas fa-3x fa-glasses tm-article-icon"></i>
            <a asp-controller="Company" asp-action="CompanyDetail" asp-route-id="@item.CompanyID"><h3 class="tm-article-title">@item.CompanyName</h3></a>
            <p class="tm-article-text">@item.Overview<br /> @item.Location<br />@item.WebSite</p>
            <a class="tm-btn tm-btn-rounded tm-article-link" asp-controller="Company" asp-action="CompanyDetail" asp-route-id="@item.CompanyID">More Details</a>
        </article>
    </div>
}
